
<div ng-controller="UserRolesCtrl as ctrl">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading margin-top">
                    <div class="titleHeader">SYSTEM USERS MANAGEMENT</div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <a asp-action="Create" asp-controller="Users" class="btn btn-sm btn-success">
                                    <i class="fa fa-plus-circle"></i>
                                    Add
                                </a>
                            </div>
                        </div>

                        <div class="col-md-12 margin-top">
                            <table class="table table-bordered table-condensed table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Country</th>
                                        <th>Email</th>
                                        <th>Phone No</th>
                                        <th>Role Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="data in ctrl.usersDatas">
                                        <td>{{data.firstName}}</td>
                                        <td>{{data.lastName}}</td>
                                        <td>{{data.country}}</td>
                                        <td>{{data.email}}</td>
                                        <td>{{data.phoneNumber}}</td>
                                        <td>{{data.roleName}}</td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                    Action
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" ng-click="ctrl.editUser(data.id)">Edit</a>
                                                    <a class="dropdown-item" ng-click="ctrl.deleteUser(data.id)">Delete</a>
                                                    <a class="dropdown-item" ng-click="ctrl.downloadExcel(data.id)">Reset Password</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            @*<dir-pagination-controls boundary-links="true" template-url="./Pagination/dirPagination.js"></dir-pagination-controls>*@
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>